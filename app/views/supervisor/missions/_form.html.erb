<% end %>

<%= content_for :after_js do %>
  <script>
    $(".datetimepicker").datetimepicker({
      language: 'fr',
      format: 'dd/mm/yyyy',
      startView: 3,
      minView: 2,
      autoclose: true
    });
  </script>
<% end %>
