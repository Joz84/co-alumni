  <div class="container">
    <div class="row">
      <div class="col-12 col-md-4">
        <div class="row">
          <div class="col-12">
            <%= render "shared/portrait", name: "Maxime Boué", statut: "Ambassadeur", photo: "http://res.cloudinary.com/doodlid/image/upload/v1520417897/pjocsx3jx3yis6ikr6or.jpg" %>
          </div>
          <div class="col-12">
            <div class="margin-bottom-medium">
